# Maintainer: Samir Benmendil <samir.benmendil@gmail.com>

pkgname=ccr-tools-git
_pkgname=ccr-tools
pkgver=20120411
pkgrel=1
pkgdesc="Some tools to talk to CCR via cli."
arch=('any')
url="https://github.com/ccr-tools/ccr-tools"
license=('GPL')
depends=('curl' 'jshon' 'wget')
makedepends=('git')

_gitroot="git://github.com/ccr-tools/ccr-tools.git"
_gitname="ccr-tools"

build() {
  cd $srcdir
  msg "Connecting to GIT server...."
 
  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone -b develop $_gitroot $_gitname
  fi
 
  msg "GIT checkout done or server timeout"
}

package() {
  cd "$srcdir/$_gitname"

  install -Dm755 ccr-tools "${pkgdir}/usr/bin/ccr-tools"
}

# vim:set ts=2 sw=2 et:
