pkgname=eid-viewer
pkgver=4.1.18
pkgrel=1
pkgdesc="Viewer for Belgian Electronic Identity Card"
arch=("any")
url="https://code.google.com/p/eid-viewer/"
license=('LGPL3')
depends=('java-runtime' 'pcsclite')
source=("https://dist.eid.belgium.be/continuous/sources/$pkgname-$pkgver-v$pkgver.src.tar.gz")
md5sums=('2c6d692359070f71b6860c7193c3198b')
sha1sums=('e5c0fa6a3be3c69a52912991f3c22c917302676b')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make install DESTDIR="$pkgdir"
}

