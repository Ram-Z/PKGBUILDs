pkgname=ncmpcpp
pkgver=0.7.7
pkgrel=1
pkgdesc='Almost exact clone of ncmpc with some new features'
arch=('i686' 'x86_64')
url='http://ncmpcpp.rybczak.net/'
license=('GPL')
depends=('curl' 'libmpdclient' 'taglib' 'ncurses' 'fftw' 'boost-libs')
source=(http://ncmpcpp.rybczak.net/stable/$pkgname-$pkgver.tar.bz2
        bindings-xdg.patch::https://github.com/arybczak/ncmpcpp/commit/ace4c7d683936dd7d5e1aaf42e00439755e2bf69.patch)
md5sums=('8a44de577fcf8b7a7063d0c5bf47298f'
         '5ea32e81438e7d87b38a979d222bfa56')

prepare() {
  cd $pkgname-$pkgver
  patch -p1 -i $srcdir/bindings-xdg.patch
}

build() {
  cd $pkgname-$pkgver
  BOOST_LIB_SUFFIX='' ./configure \
    --prefix=/usr \
    --enable-clock \
    --enable-outputs \
    --enable-unicode \
    --enable-visualizer \
    --with-curl \
    --with-fftw \
    --with-taglib

  make
  make -C extras
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
  install -Dm755 extras/artist_to_albumartist $pkgdir/usr/bin/
}
