# Contributor: aur2ccr (http://ddg.gg/?q=!ccr+aur2ccr&t=chakra)
pkgdesc="ROS - rqt_plot"
url='http://www.ros.org/'

pkgname='ros-groovy-rqt-plot'
pkgver='0.2.10'
arch=('i686' 'x86_64')
pkgrel=1
license=('BSD')
makedepends=('ros-build-tools')

depends=(
  ros-groovy-rqt-gui
  ros-groovy-rqt-gui-py
  qt
)
build() {
  [ -f /opt/ros/groovy/setup.bash ] && source /opt/ros/groovy/setup.bash
  if [ -d ${srcdir}/rqt_plot ]; then
    cd ${srcdir}/rqt_plot
    git fetch origin --tags
    git reset --hard release/rqt_plot/${pkgver}
  else
    git clone -b release/rqt_plot/${pkgver} git://github.com/ros-gbp/rqt_common_plugins-release.git ${srcdir}/rqt_plot
  fi
  [ -d ${srcdir}/build ] || mkdir ${srcdir}/build
  cd ${srcdir}/build
  /usr/share/ros-build-tools/fix-python-scripts.sh ${srcdir}/rqt_plot
  cmake ${srcdir}/rqt_plot -DCATKIN_BUILD_BINARY_PACKAGE=ON -DCMAKE_INSTALL_PREFIX=/opt/ros/groovy -DPYTHON_EXECUTABLE=/usr/bin/python2 -DPYTHON_INCLUDE_DIR=/usr/include/python2.7 -DPYTHON_LIBRARY=/usr/lib/libpython2.7.so -DSETUPTOOLS_DEB_LAYOUT=OFF
  make
}

package() {
  cd "${srcdir}/build"
  make DESTDIR="${pkgdir}/" install
}
