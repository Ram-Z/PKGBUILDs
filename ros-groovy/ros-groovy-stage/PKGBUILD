# Contributor: aur2ccr (http://ddg.gg/?q=!ccr+aur2ccr&t=chakra)
pkgdesc="ROS - Package Tool"
url='http://www.ros.org/'

pkgname='ros-groovy-stage_ros'
pkgver='1.7.2'
arch=('i686' 'x86_64')
pkgrel=1
license=('BSD')
makedepends=('ros-build-tools')
source=("stage_ros::git://github.com/ros-gbp/stage_ros-release.git#tag=release/hydro/stage_ros/${pkgver}-0")
md5sums=('SKIP')

depends=(
  ros-groovy-catkin
  python2
  pkg-config)

build() {
  cd ${srcdir}/stage_ros
  /usr/share/ros-build-tools/fix-python-scripts.sh ${srcdir}/stage_ros
  cmake ${srcdir}/stage_ros -DCATKIN_BUILD_BINARY_PACKAGE=ON -DCMAKE_INSTALL_PREFIX=/opt/ros/groovy -DPYTHON_EXECUTABLE=/usr/bin/python2 -DPYTHON_INCLUDE_DIR=/usr/include/python2.7 -DPYTHON_LIBRARY=/usr/lib/libpython2.7.so -DSETUPTOOLS_DEB_LAYOUT=OFF
  make
}

package() {
  cd "${srcdir}/stage_ros"
  make DESTDIR="${pkgdir}/" install
}
