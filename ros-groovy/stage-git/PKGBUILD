pkgname=stage-git
pkgver=20130205
pkgrel=1
pkgdesc='Fast and scalable robot simulator'
arch=('any')
url='http://playerstage.sourceforge.net'
license=('GPL')
depends=('fltk' 'libpng' 'player')
conflicts=('stage' 'stage3')
makedepends=('cmake')
source=("$pkgname::git+https://github.com/rtv/Stage.git"
        "fix-libpath.patch")
md5sums=('SKIP'
         'd9c2e9a534b3aae6e66082a4a31b8f89')

prepare() {
  patch -p0 < fix-libpath.patch
}

build() {
  cd ${pkgname}
  cmake . -DCMAKE_INSTALL_PREFIX=/usr -DPROJECT_LIB_DIR=lib
  make
}

package() {
  cd ${pkgname}
  make DESTDIR="${pkgdir}" install
}
