pkgname=unibilium
pkgver=1.2.0
pkgrel=1
pkgdesc="a terminfo parsing library"
arch=('x86_64' 'i686')
url="https://github.com/mauke/unibilium/"
license=(LGPL3)
source=("https://github.com/mauke/unibilium/archive/v$pkgver.tar.gz")
md5sums=('9b1c97839a880a373da6c097443b43c4')

build() {
  cd "${pkgname}-${pkgver}"
  make PREFIX=/usr
}

check() {
  cd "${pkgname}-${pkgver}"
  make test
}

package() {
  cd "${pkgname}-${pkgver}"
  DESTDIR="${pkgdir}" make install PREFIX=/usr
}
