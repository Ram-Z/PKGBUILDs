pkgname=zathura-pdf-poppler
pkgver=0.2.8
pkgrel=1
pkgdesc="PDF support for Zathura (Poppler backend)"
arch=('i686' 'x86_64')
url="https://pwmt.org/projects/zathura/plugins/zathura-pdf-poppler/"
license=('custom')
depends=('poppler-glib' 'zathura' 'desktop-file-utils')
install="$pkgname.install"
source=("https://pwmt.org/projects/zathura/plugins/download/$pkgname-$pkgver.tar.gz")
md5sums=('74ea0eb99bb62248c9047a033671d08e')

build() {
  make -C $pkgname-$pkgver
}

package(){
  make -C $pkgname-$pkgver DESTDIR="$pkgdir" install
  install -Dm0644 $pkgname-$pkgver/LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
